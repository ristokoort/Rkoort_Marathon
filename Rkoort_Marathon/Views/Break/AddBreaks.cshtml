@model IEnumerable<Runner>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int i = 0;
}
<h3>Add Breaks @ViewBag.id</h3>
<br />


<br />

<br />


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Start Time</th>
            <th scope="col">Break Time</th>

            <th scope="col">Breaks2 End</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in @Model)
        {
            i++;

            <tr>
                <th scope="row">@i</th>
                <td>@obj.FirstName</td>
                <td>@obj.LastName</td>

                @if (@obj.StartTime != null)
                {
                    DateTime dt1 = (DateTime)obj.StartTime;

                    <td>@dt1.ToString("HH:mm:ss")</td>
                }
                @if (obj.Break1 == null)
                {


                    <form class="btn btn-info" asp-action="AddBreak" asp-route-id="@obj.id" asp-route-b="1" enctype="multipart/form-data">


                    <td>  <input type="time" class="form-control" id="breaktime1" name="breaktime1" placeholder="Break Time" required></td>
                    <td><button type="submit" class="btn btn-info">Finished </button></td>
                    </form>
                }
                else

                @if (obj.Break2 == null)
                {

                    <form class="btn btn-info" asp-action="AddBreak" asp-route-id="@obj.id" asp-route-b="2" enctype="multipart/form-data">


                    <td>  <input type="time" class="form-control" id="breaktime1" name="breaktime1" placeholder="Break Time" required></td>
                    <td><button type="submit" class="btn btn-info">Finished </button></td>
                    </form>

                }
            </tr>
        }
    </tbody>
</table>